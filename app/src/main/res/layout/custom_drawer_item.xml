<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_60dp"
        android:paddingLeft="@dimen/margin_size_16dp"
        android:paddingRight="@dimen/margin_size_16dp">

    <ImageView
        android:id="@+id/ivDrawerItem"
        android:layout_width="@dimen/margin_size_32dp"
        android:layout_height="@dimen/margin_size_32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.example.ifarm.utils.CustomTextView
        android:id="@+id/tvDrawerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order History"
        android:layout_marginLeft="@dimen/margin_size_18dp"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/colordarkestGrey"
        app:font_name="sfuidisplay_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivDrawerItem"/>

    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="@dimen/margin_size_16dp"
        android:layout_height="@dimen/margin_size_16dp"
        app:srcCompat="@drawable/ic_next"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGreyBorder"
        android:layout_marginTop="@dimen/margin_size_8dp"
        android:layout_marginLeft="@dimen/margin_size_4dp"
        android:layout_marginRight="@dimen/margin_size_4dp"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>

</layout>